    <div id="main">
        <div id="main_descripcion">
            <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Corporis debitis omnis cumque aut provident recusandae. Asperiores qui dolore autem eveniet, nulla ratione fugiat eum voluptatem fuga nesciunt in natus eligendi quod quos nostrum animi ea </p>
        </div>
        <div id="contenedor_form">
            <div id="form">
                <div id="form_inputs">  
                    <p id="form_inputs-title">Nuevo Pedido</p> 
                        <form action="/pedido" method="post" id="form_areas" enctype="multipart/form-data">        
                                <div class="form_area">
                                    <p>Tamaño</p>
                                    <select required id="Tipo" name="Tipo">
                                        <option value="value0" selected></option>
                                        <option value="A4">A4</option>
                                        <option value="Oficio">Oficio</option>
                                    </select>
                                </div>
                                <div class="form_area">
                                    <p>Número de copias</p>
                                    <input required type="number" id="copias" name="copias" placeholder="Cuantas copias quiere?">
                                </div>
                                <div class="form_area">
                                    <p>Faz</p>
                                    <select required id="Faz" name="selectFaz">
                                        <option value="value0" selected></option>
                                        <option value="Simple">Simple Faz</option>
                                        <option value="Doble">Doble Faz</option>
                                    </select>
                                </div>
                                <div class="form_area">
                                    <p>¿A color?</p>
                                    <select required id="color" name="color">
                                        <option value="value0" selected></option>
                                        <option value="0">Blanco y Negro</option>
                                        <option value="1">A color</option>
                                    </select>
                                </div>
                                <div class="form_area">
                                    <p>Carillas a Imprimir</p>
                                    <input required type="number" id="paginas" name="páginas" placeholder="Cuantas páginas se imprimen?">
                                </div>
                                <div class="form_area">
                                    <p>Anillado</p>
                                    <select required id="Anillado" name="Anillado">
                                        <option value="value0" selected></option>
                                        <option value="No anillado">No anillado</option>
                                        <option value="Anillado">Anillado</option>
                                    </select>
                                </div>
                                <div class="form_area">
                                    <p>Rangos de Páginas</p>
                                    <textarea required name="Descripcion" rows="2" cols="45" placeholder="Ejs: '2 - 5', 'Archivo completo', 'Todas menos 3 - 7' " ></textarea>
                                </div>
                                <div class="form_area">
                                    <p>Link de Drive</p>
                                    <textarea id="Link" name="Link" rows="2" cols="45" placeholder="Link de Drive"></textarea>
                                </div>
                                <div class="form_area">
                                    <p>Elegí la Fotocopiadora</p>
                                    <select required id="Fotocopiadora" name="Fotocopiadora">
                                        <option value="value0" selected></option>
                                        <option value="Básico">Básico</option>
                                        <option value="Superior">Superior</option>
                                    </select>
                                </div>
                                <div class="form_area">
                                    <input type="file" class='fancy-file' id="file"  name="archivo" accept="image/*" data-button="Examinar" data-empty="Sin archivos"  />
                                </div>
                                <div class="form_submit form_area">
                                    <input type="submit">
                                </div>
                        </form>    
                        
                </div>        
                <div id="form_portada">
                    <div id="contenedor_portada">
                                <h4>Tu Pedido</h4>
                                <div id="img_contenedor">
                                    <embed src="folder-icon.webp" type="image/webp" id="img">
                                </div>
                                <div id="contenedor_calculadora">
                                    <p>Precio Estimado/juego</p>
                                    <p id="precio_copia">$0,00</p>
                                    <p>Total Estimado</p>
                                    <p id="precio_total">$0,00</p>
                                    <div id="calculadora_container" class="form_submit form_area">
                                        <button id="calculadora">Calcular</button>
                                    </div>

                                </div>
                    </div>
                </div>
            
            </div>
        </div>
    </div>

