<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CREB's</title>
    <script src="https://kit.fontawesome.com/5dd57f835c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="prereserva.css">
</head>
<body>
    
    <div id="top__of-page">
        <header>
            <a href="/inicio"><div id="img_top"><img src="IMG-20231211-WA0080.jpg"></div></a>
        </header>
        <div id="menu-icon"><a href="/inicio"><i class="fa-solid fa-user"></i></a></div>
    </div>

    <% if (typeof messages !== 'undefined' && messages.length > 0) {%>
        <div class="alert alert-info" id="success_message">
            <p> <%= success %> </p>
            <i class="fa-solid fa-x"></i>
        </div>
    <%}%>

    <div id="main">
        <div id="selector">
            <% let lista = [] %>
            <% prereserva.forEach((elemento)  => { %>
                <% bandera = true %>
                <% largo = lista.length %>
                <% for (let i = 0; i<largo; i++) { %>
                    <% if(elemento.año == lista[i]) { %>
                        <% bandera = false%>
                    <% } %>
                <% } %>
                <% if(bandera) {%>
                    <p class="pestaña"><%= elemento.año %></p>
                    <% lista.push(elemento.año) %>
                <% } %>
            <% }) %>
        </div>
        <div id="opciones">
            <% if(prereserva.length > 0) {%>
                <% prereserva.forEach((elemento) => { %>
                    <div class="opcion <%= elemento.año %>">
                        <p class="nombre"><%= elemento.nombre %></p>     
                        <p class="precio">$ <%= elemento.precio %></p>
                        <p id="<%= elemento.id %>" class="boton">Ordenar</p>
                    </div>                
                <% })%>
        <% } else {%>
            <div class="historial_entrada">
                <p id="SinPrereserva"> No hay libros de Pre-reserva disponible! </p>
            </div>             
            <% }%>
        </div>


    </div>

    <footer class="footer">
		
        <div class="footer__contenedor-info">
            <h3>Contacto:</h3>
            <ul>
                <li>Tel: +54 3413217015</li>
                <li>Email: fdelosestudiantes@gmail.com</li>
                <li>Instagram: <a href="https://www.instagram.com/9dejuliomnr/">9 de Julio</a></li>
            </ul>
        </div>
        <div class="footer__contenedor-info">
            <h3>Servicios:</h3>
            <ul>
                <li>Fotocopias</li>
                <li>Libros</li>
                <li>Librerìa</li>
            </ul>
        </div>
        <div id="footer__footer">
            <p>Creado por PicaWeb. Todos los derechos reservados</p>
        </div>
    </footer>


    

    <script src="prereserva.js"></script>
</body>
</html>